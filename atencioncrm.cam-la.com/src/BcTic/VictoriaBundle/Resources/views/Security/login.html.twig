{% extends '::base.html.twig' %}

{% block body -%}

<div class="container login" style="width: 60%;"> 

<h4 class="text-center text-primary"></h4>
<br/>

{% if error %}
   <div class="alert alert-danger alert-dismissable">
     {{ error.message }}
   </div>
{% endif %}

<form class="form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
  <div class="form-group">
    <label for="username" class="col-sm-3 control-label">Usuario</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="username" name="_username"  value="{{ last_username }}"  placeholder="">
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-3 control-label">Password</label>
    <div class="col-sm-9">
      <input type="password" class="form-control" id="password" name="_password" placeholder="ContraseÃ±a" />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-default" name="login">Ingresar</button>
    </div>
  </div>
</form>
</div>


{% endblock %}