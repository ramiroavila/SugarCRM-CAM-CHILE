{% block button_widget %}
{% spaceless %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <button class="btn btn-default btn-xs" type="{{ type|default('button') }}" {{ block('button_attributes') }}>
    <span class="glyphicon glyphicon-floppy-disk"></span>
    {{ label|trans({}, translation_domain) }}</button>
{% endspaceless %}
{% endblock button_widget %}

